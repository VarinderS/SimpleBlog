@model SimpleBlog.Areas.Admin.ViewModels.PostCreate

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm(actionName: "Create", controllerName: "Post", method: FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	
	<h4>Create a new post.</h4>
	<hr/>

	@Html.ValidationSummary("", new { @class = "text-danger" })

	<div class="form-group">
		@Html.LabelFor(m => m.Title, new {@class = "col-md-2 control-label"})
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Title, new {@class = "form-control"})
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Tags, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@for (int i = 0; i < Model.Tags.Count; i++)
			{
				var tag = Model.Tags[index: i];

				<div class="checkbox">
					<label>
						<input type="hidden" name="Tags[@(i)].Id" value="@tag.Id" />
						<input type="hidden" name="Tags[@(i)].Name" value="@tag.Name"/>
						@Html.CheckBox(name: "Tags[" + i + "].IsChecked", isChecked: tag.IsChecked) @tag.Name
					</label>
				</div>
			}
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-default" value="Create"/> or <a href="@Url.Action(actionName: "Index")">Cancel</a>
		</div>
	</div>
}